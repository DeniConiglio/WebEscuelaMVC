@model WebEscuelaMVC.Models.Aula


<h2>Eliminar aula: @Model.Numero</h2>
<p>Desea borrar el aula?</p>
@using (Html.BeginForm("Delete", "Aula", FormMethod.Post))
{
    <div>
        @Html.DisplayNameFor(m => m.Id)
        @Html.DisplayFor(m => m.Id)

        @Html.DisplayNameFor(m => m.Numero)
        @Html.DisplayFor(m => m.Numero)

        @Html.DisplayNameFor(m => m.Estado)
        @Html.DisplayFor(m => m.Estado)

    </div>
    <input type="submit" name="Delete" value="Eliminar" />
}

<p>@Html.ActionLink("Volver al Index", "Index", "Aula")</p>